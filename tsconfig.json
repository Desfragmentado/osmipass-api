{
  "extends": "@adonisjs/tsconfig/tsconfig.app.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "build",
    "module": "NodeNext",
    "target": "ES2022",
    "moduleResolution": "NodeNext",
    "types": ["@adonisjs/core", "@adonisjs/mail"],
    "baseUrl": ".",
    "paths": {
      "#Controllers/*": ["./app/Controllers/*"],
      "#controllers/*": ["./app/Controllers/*"],
      "#services/*": ["./app/services/*"],
      "#start/*": ["./start/*"],
      "#config/*": ["./config/*"],
      "*": ["./*"]
    }
  }
}
